<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/main_layout_desc"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/to_type_1"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/to_type_1"
                android:scaleType="fitStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type1_ic" />

            <ImageView
                android:id="@+id/to_type_2"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/to_type_2"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type2_ic" />

            <ImageView
                android:id="@+id/to_type_3"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/to_type_3"
                android:scaleType="fitStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to_type_1"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type3_ic" />

            <ImageView
                android:id="@+id/to_type_4"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/to_type_4"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to_type_2"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type4_ic" />

            <ImageView
                android:id="@+id/to_type_5"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:layout_marginTop="33dp"
                android:contentDescription="@string/to_type_5"
                android:scaleType="fitStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to_type_3"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type5_ic" />

            <ImageView
                android:id="@+id/to_type_6"
                android:layout_width="0dp"
                android:layout_height="194dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/to_type_6"
                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to_type_4"
                app:layout_constraintWidth_percent="0.45"
                app:srcCompat="@drawable/type6_ic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>