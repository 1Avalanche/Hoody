<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anisimova.hoody.ui.FragmentType6"
    android:background="@color/smoke">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/smoke"
        app:layout_constraintBottom_toTopOf="@+id/buttons_recycler_view"
        app:layout_constraintDimensionRatio="10:11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/sleeveLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/sleeveleft1"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"/>

        <ImageView
            android:id="@+id/sleeveRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/sleeveright1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"/>

        <ImageView
            android:id="@+id/bodyRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <ImageView
            android:id="@+id/bodyLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bodydiagonal"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintStart_toStartOf="@+id/bodyRight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.330" />

        <ImageView
            android:id="@+id/hoodRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/hoodleft1"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"/>

        <ImageView
            android:id="@+id/hoodLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/hoodright1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"/>

        <ImageView
            android:id="@+id/sleeveRightBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/sleeveleftbottom1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sleeveLeft"
            app:layout_constraintWidth_percent="0.25" />

        <ImageView
            android:id="@+id/bodyBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bodybottom1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/sleeveRightBottom"
            app:layout_constraintTop_toBottomOf="@+id/bodyRight"
            app:layout_constraintWidth_percent="0.5"/>

        <ImageView
            android:id="@+id/sleeveLeftBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/sleeverightbottom1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/bodyBottom"
            app:layout_constraintTop_toBottomOf="@+id/sleeveRight"
            app:layout_constraintWidth_percent="0.25" />

        <ImageView
            android:id="@+id/pocket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/pocket1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/bodyLeft"
            app:layout_constraintEnd_toStartOf="@+id/sleeveLeftBottom"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/sleeveRightBottom"
            app:layout_constraintWidth_percent="0.30" />

        <ImageView
            android:id="@+id/pocket_small"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/smallpocket"
            app:layout_constraintEnd_toEndOf="@+id/bodyRight"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toBottomOf="@+id/hoodLeft"
            app:layout_constraintWidth_percent="0.25"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/clear_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:src="@drawable/clear_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_btn"/>

    <ImageView
        android:id="@+id/save_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:src="@drawable/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/pocket_big_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_big_pocket"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pocket_big_ok"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_ok"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/pocket_small_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_small_pocket"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pocket_big_btn" />

    <ImageView
        android:id="@+id/pocket_small_ok"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_ok_small"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pocket_big_btn"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buttons_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gradient_palette"
        android:paddingBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>